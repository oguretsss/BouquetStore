@model BouquetStore.Domain.Entities.SeasonPromoProduct[]

@{ 
  AjaxOptions ajaxOpts = new AjaxOptions
  {
    UpdateTargetId = "cart-summary",
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess"
  };
}
<div class="row text-center">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h3>Сезонное предложение</h3>
    </div>
    <div class="col-md-2"></div>
</div>
<div class="row">
    <div class="col-md-8 col-sm-12">
      <div class="product-container">
        <div class="shop-item-img hidden-sm hidden-xs">
          <img src="@Url.Action("GetImage", "Promo", new { productId = Model[0].ProductID, imageType = "Primary" })" class="img-responsive" alt="@(Model[0].Name)">
          <div class="shop-tools tools-floating text-right">
            <p>Цена: @(Model[0].Price.ToString("c"))</p>
            <button class="btn btn-default">Подробнее</button>
            @using (Ajax.BeginForm("AddToCart", "Cart", ajaxOpts))
            {
              @Html.Hidden("productId", Model[0].ProductID)
              @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
              @Html.Hidden("isPromo", true)
              <button type="submit" class="btn btn-default btn-to-basket">В корзину</button>
            }
          </div>
        </div>
        <h5 class="hidden-sm hidden-xs">@(Model[0].Name)</h5>
        <h5 class="text-center hidden-md hidden-lg">@(Model[0].Name)</h5>
        <div class="shop-item-img hidden-md hidden-lg">
