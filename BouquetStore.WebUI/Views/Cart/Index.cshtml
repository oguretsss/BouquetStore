@model BouquetStore.WebUI.Models.CartIndexViewModel

@{
    ViewBag.Title = "Fruit is Good | Оригинальные букеты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ваша корзина</h2>
<table class="table">
  <thead>
    <tr>
      <th>Кол-во</th>
      <th>Букет</th>
      <th class="text-right">Цена</th>
      <th class="text-right">Подытог</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Cart.Lines)
    {
      <tr>
        <th>@item.Quantity</th>
        <th>@item.Product.Name</th>
        <th>@item.Product.Price.ToString("c")</th>
        <th>@((item.Product.Price * item.Quantity).ToString("c"))</th>
      </tr>
    }
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3" class="text-right">Total:</td>
      <td class="text-right">
        @Model.Cart.ComputeTotalValue().ToString("c")
      </td>
    </tr>
  </tfoot>
</table>
<div class="text-center">
  <a class="btn btn-primary" href="@(Model.ReturnUrl ?? Url.Action("Index", "Home"))">В магазин</a>
</div>

